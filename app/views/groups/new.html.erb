<% content_for(:title, "New Group") %>

<h1 class="text-center">Create Contribution Group</h1>

<div class="row">
    <div class="col-xs-1 col-md-3"></div>
    <div class="col-xs-10 col-md-6 ">
        <%= form_with(model: @group, local: true) do |f| %>
            <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, autofocus: true, placeholder: "Group Name", class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :image %>
                <%= f.file_field :image, class: "form-control" %>
            </div>
           <%= submit_tag("Create Group", :class=>"btn btn-success button") %>
        <% end %>
    </div>
    <div class="col-xs-1 col-md-3 "></div>
</div>


            


